<Window x:Class="MDF_Manager.ColorCanvas"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        Title="Color Picker" Height="400" Width="300">
    <Grid>
        <xctk:ColorCanvas x:Name="colorCanvas"/>
        <TextBox Name="ColorEntry" MinWidth="100" MaxWidth="150" Height="20" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="30" Text=""/>
        <Button MinHeight="15" MaxHeight="20" MinWidth="100" MaxWidth="150" HorizontalAlignment="Left" Content="Apply" Click="ApplyColor" VerticalAlignment="Bottom" Margin="30,0,0,10"/>
        <Button MinWidth="100" MaxWidth="150" Height="25" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="30" Content="Confirm" Click="Confirm"/>
    </Grid>
</Window> 
